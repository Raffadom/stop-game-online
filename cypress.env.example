# Cypress Test Environment Configuration

# Base URL for testing
CYPRESS_baseUrl=http://localhost:4173

# Backend URL for API tests
CYPRESS_apiUrl=http://localhost:3000

# Test user credentials
CYPRESS_testUserName=CypressTestUser
CYPRESS_testRoomCode=TEST01

# Test timeouts (in milliseconds)
CYPRESS_defaultCommandTimeout=10000
CYPRESS_requestTimeout=15000
CYPRESS_responseTimeout=15000

# Viewport settings
CYPRESS_viewportWidth=1280
CYPRESS_viewportHeight=720

# Video and screenshot settings
CYPRESS_video=true
CYPRESS_screenshotOnRunFailure=true

# Browser settings
CYPRESS_chromeWebSecurity=false

# Debug settings
CYPRESS_debug=false